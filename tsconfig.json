{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["Config/*"],
      "@controllers/*": ["Controllers/*"],
      "@routes/*": ["Routes/*"],
      "@schemas/*": ["Schemas/*"],
      "@services/*": ["Services/*"],
      "@interfaces/*": ["Interfaces/*"],
      "@middleware/*": ["Middleware/*"],
      "@utils/*": ["Utils/*"],
      "src/*": ["src/*"]
    }
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
